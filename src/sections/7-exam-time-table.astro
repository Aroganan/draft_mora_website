---
import Timetable from "../components/Timetable.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<section class="my-10" id="timetable">
	<h2 class="text-center">{t("timetable__title")}</h2>
	<div class="gap-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
		<div>
			<Timetable
				date="25th November 2023 (Saturday)"
				Time1="1.30 p.m.-4.40 p.m. :"
				subject1="COMBINED MATHEMATICS-I"
				Time2="1.30 p.m.-3.30 p.m. : "
				subject2=" BIOLOGY - I"
			/>
		</div>

		<div>
			<Timetable
				date="26th November 2023 (Sunday)"
				Time1="1.30 p.m.-4.40 p.m. :"
				subject1="COMBINED MATHEMATICS-II"
				Time2="1.30 p.m.-4.40 p.m. :"
				subject2=" BIOLOGY - II"
			/>
		</div>

		<div>
			<Timetable
				date="30th November 2023 (Thursday)"
				Time1="2.30 p.m.-4.30 p.m. :"
				subject1="PHYSICS - I"
				Time2=""
				subject2=""
			/>
		</div>

		<div>
			<Timetable
				date="03rd December 2023 (Sunday)"
				Time1="1.30 p.m.-4.40 p.m. :"
				subject1="PHYSICS - II"
				Time2=""
				subject2=""
			/>
		</div>

		<div>
			<Timetable
				date="9th December 2023 (Saturday)"
				Time1="1.30 p.m.-3.30 p.m. : "
				subject1="CHEMISTRY - I"
				Time2="1.30 p.m.-3.30 p.m. :"
				subject2="ICT - I"
			/>
		</div>
		<div>
			<Timetable
				date="10th December 2023 (Sunday)"
				Time1="1.30 p.m.-4.40 p.m. : "
				subject1="CHEMISTRY - II"
				Time2="1.30 p.m.-4.40 p.m. : "
				subject2="ICT - II"
			/>
		</div>
	</div>
</section>
