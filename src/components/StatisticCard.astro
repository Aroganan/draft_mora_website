---
interface Props {
	value: number;
	text: string;
	
}

const { value, text,  } = Astro.props;
---

<div
	class=""
>
	<h2 class="">{value}</h2>
	
	<p class="">{text}</p>
</div>

<style>
	div {
  width:100%;
  display: inline-block ;
  justify-content: center;
  align-items: center;
  transition-property: box-shadow, transform;
  transition-duration: 350ms;
  transition-timing-function: ease;
	
}
div:is(:hover, :focus) {
  color: rgb(157, 230, 230);
  transform: translateY(-8px);
}
span{
	font-size: 30px;
  text-align: center;

}
p{
  font-size: 20px;
  text-align: center;
}
h2{
  font-size: 40px;
  text-align: center;
}

</style>
