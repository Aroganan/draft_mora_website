---
interface Props {
	src: string;
	name: string;
	state: string;
	body: string;
	batch: string;
}

const { src, name, state, body, batch } = Astro.props;
---

<div
	class="p-4 text-justify duration-150 min-w-[400px] hover:bg-[#add8e6] grid h-full gap-x-4 items-center"
>
	<img class="h-20 w-20 rounded-full" src={src} alt={name} />
	<p>
		<span class="text-lg font-bold mb-12">{name}</span><br />
		{state}<br />{batch}
	</p>
	<p class="col-span-2">
		{body}
	</p>
</div>
<style>
	div {
		grid-template-columns: auto 1fr;
	}
</style>
