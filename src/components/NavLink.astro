---
interface Props {
	text: string;
	href?: string;
}

const { text, href } = Astro.props;

if (href == undefined) {
	console.warn(`<NavLink text={${text}} />: href is not provided`);
}
---

<li class="inline-block w-fit">
	<a
		class="no-underline text-blanchedalmond-900 hover:underline"
		href={href || ""}
	>
		{text}</a
	>
</li>

